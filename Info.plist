<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Bundle Information -->
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>
	<key>CFBundleDisplayName</key>
	<string>Atlas</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>17.0</string>

	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
		<string>microphone</string>
	</array>

	<!-- Supported Interface Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Privacy Descriptions - REQUIRED -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Atlas needs access to your microphone to record voice input for AI-powered conversations and voice commands.</string>

	<key>NSSpeechRecognitionUsageDescription</key>
	<string>Atlas uses speech recognition to transcribe your voice input and enable hands-free AI interactions.</string>

	<key>NSCameraUsageDescription</key>
	<string>Atlas needs camera access to scan QR codes and capture images for AI analysis.</string>

	<key>NSPhotoLibraryUsageDescription</key>
	<string>Atlas needs access to your photo library to analyze images and provide AI-powered insights.</string>

	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Atlas uses your location to provide context-aware AI responses and location-based features.</string>

	<key>NSContactsUsageDescription</key>
	<string>Atlas needs access to your contacts to help you communicate and share information more easily.</string>

	<key>NSCalendarsUsageDescription</key>
	<string>Atlas can help you manage your calendar events and schedule meetings with AI assistance.</string>

	<key>NSRemindersUsageDescription</key>
	<string>Atlas can create and manage reminders based on your conversations with the AI.</string>

	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>fetch</string>
		<string>remote-notification</string>
		<string>processing</string>
	</array>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow local development servers -->
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<!-- Exception domains for API endpoints -->
		<key>NSExceptionDomains</key>
		<dict>
			<!-- OpenAI API -->
			<key>api.openai.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
			<!-- Anthropic API -->
			<key>api.anthropic.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
			<!-- Azure OpenAI (if used) -->
			<key>openai.azure.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
		</dict>
	</dict>

	<!-- URL Schemes for OAuth and Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.atlasapp.oauth</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>atlasapp</string>
				<string>atlas-oauth</string>
			</array>
		</dict>
		<!-- Universal Links -->
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.atlasapp.universallink</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>https</string>
			</array>
		</dict>
	</array>

	<!-- Launch Screen -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>LaunchScreenBackground</string>
		<key>UIImageName</key>
		<string>LaunchIcon</string>
	</dict>

	<!-- Application Scene Manifest -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>

	<!-- Fonts -->
	<key>UIAppFonts</key>
	<array>
		<string>SF-Pro-Display-Regular.otf</string>
		<string>SF-Pro-Display-Medium.otf</string>
		<string>SF-Pro-Display-Semibold.otf</string>
		<string>SF-Pro-Display-Bold.otf</string>
	</array>

	<!-- Status Bar Style -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Supports Document Browser -->
	<key>UISupportsDocumentBrowser</key>
	<true/>

	<!-- File Sharing -->
	<key>UIFileSharingEnabled</key>
	<false/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<false/>

	<!-- iTunes File Sharing -->
	<key>UISupportsDocumentBrowser</key>
	<false/>

	<!-- Prevents Backup -->
	<key>NSAllowsArbitraryLoads</key>
	<false/>

	<!-- Keyboard Shortcuts -->
	<key>UIKeyCommands</key>
	<array/>

	<!-- Excluded Architectures -->
	<key>EXCLUDED_ARCHS</key>
	<string>i386</string>
</dict>
</plist>
